        },
        {
          "name": "voter",
          "type": "publicKey",
          "index": false
        },
        {
          "name": "winnerAmount",
          "type": "u64",
          "index": false
        },
        {
          "name": "shareOfLosingPool",
          "type": "u64",
          "index": false
        },
        {
          "name": "totalPayout",
          "type": "u64",
          "index": false
        }
      ]
    },
    {
      "name": "ProposalCreated",
      "fields": [
        {
          "name": "proposalId",
          "type": "u64",
          "index": false
        },
        {
          "name": "proposer",
          "type": "publicKey",
          "index": false
        },
        {
          "name": "marketName",
          "type": "string",
          "index": false
        },
        {
          "name": "pythPriceFeed",
          "type": "publicKey",
          "index": false
        },
        {
          "name": "votingEndsAt",
          "type": "i64",
          "index": false
        }
      ]
    },
    {
      "name": "ProposalExecuted",
      "fields": [
        {
          "name": "proposalId",
          "type": "u64",
          "index": false
        },
        {
          "name": "proposer",
          "type": "publicKey",
          "index": false
        },
        {
          "name": "marketName",
          "type": "string",
          "index": false
        },
        {
          "name": "proposerBonus",
          "type": "u64",
          "index": false
        },
        {
          "name": "executedAt",
          "type": "i64",
          "index": false
        }
      ]
    },
    {
      "name": "CouncilInitialized",
      "fields": [
        {
          "name": "authority",
          "type": "publicKey",
          "index": false
        },
        {
          "name": "fateArenaProgram",
          "type": "publicKey",
          "index": false
        },
        {
          "name": "proposalStake",
          "type": "u64",
          "index": false
        },
        {
          "name": "votingPeriod",
          "type": "i64",
          "index": false
        }
      ]
    },
    {
      "name": "ProposalResolved",
      "fields": [
        {
          "name": "proposalId",
          "type": "u64",
          "index": false
        },
        {
          "name": "status",
          "type": {
            "defined": "ProposalStatus"
          },
          "index": false
        },
        {
          "name": "passPool",
          "type": "u64",
          "index": false
        },
        {
          "name": "failPool",
          "type": "u64",
          "index": false
        },
        {
          "name": "passPrice",
          "type": "u64",
          "index": false
        },
        {
          "name": "failPrice",
          "type": "u64",
          "index": false
        }
      ]
    }
  ],
  "errors": [
